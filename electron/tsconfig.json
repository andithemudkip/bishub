{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../dist-electron",
    "rootDir": "..",
    "declaration": false,
    "composite": false
  },
  "include": ["./**/*.ts", "../src/shared/**/*.ts"],
  "exclude": ["node_modules"]
}

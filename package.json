{
  "name": "bishub",
  "version": "0.1.0",
  "type": "module",
  "description": "Church display application with remote control",
  "main": "dist-electron/main.js",
  "scripts": {
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --outfile=dist-electron/preload.js --external:electron --format=cjs",
    "dev": "npm run build:preload && vite",
    "build": "tsc && npm run build:preload && vite build",
    "build:win": "tsc && npm run build:preload && vite build && electron-builder --win --x64 --publish never",
    "build:mac": "tsc && npm run build:preload && vite build && electron-builder --mac --publish never",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:preload && vite build && electron-builder --publish never",
    "release": "tsc && npm run build:preload && vite build && electron-builder --publish always",
    "release:mac": "tsc && npm run build:preload && vite build && electron-builder --mac --publish always",
    "release:win": "tsc && npm run build:preload && vite build && electron-builder --win --x64 --publish always"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "multer": "^1.4.5-lts.1",
    "qrcode.react": "^4.2.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bishub.app",
    "productName": "BisHub",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "andithemudkip",
      "repo": "bishub"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg",
      "extraResources": [
        {
          "from": "bin/darwin",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        {
          "from": "bin/win32",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "extraResources": [
        {
          "from": "bin/linux",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}
